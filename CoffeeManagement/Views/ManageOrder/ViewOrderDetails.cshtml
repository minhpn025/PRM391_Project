@model CoffeeManagement.Models.Order
@{
    ViewBag.Title = "ViewOrderDetails";
    var order = Model;
    var orderDetails = Model.OrderDetails.ToArray();
}

<h2>Order @order.Id Details</h2>


<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><strong>Order summary</strong></h3>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <td class="text-left border-0 text-uppercase small font-weight-bold"><strong>Item</strong></td>
                                <td class="text-center border-0 text-uppercase small font-weight-bold"><strong>Price</strong></td>
                                <td class="text-center border-0 text-uppercase small font-weight-bold"><strong>Quantity</strong></td>
                                <td class="text-center border-0 text-uppercase small font-weight-bold"><strong>Totals</strong></td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in orderDetails)
                            {
                                <!-- foreach ($order->lineItems as $line) or some such thing here -->
                                <tr>
                                    <td>@item.Product.ProductName</td>
                                    <td class="text-center">@item.Product.Price</td>
                                    <td class="text-center">@item.Quantity</td>
                                    <td class="text-center"><i>$</i>@item.LinePrice</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="d-flex flex-row-reverse bg-dark text-white p-4">
                        <div class="py-3 px-5 text-right">
                            <div class="mb-2">Grand Total</div>
                            <div class="h2 font-weight-light"><i>$</i>@order.TotalPrice</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>